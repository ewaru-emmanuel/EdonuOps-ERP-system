# Database Configuration
# Replace with your AWS RDS PostgreSQL connection string
DATABASE_URL=postgresql://username:password@your-aws-rds-endpoint:5432/edonuops_erp

# Development Database (SQLite fallback)
DEV_DATABASE_URL=sqlite:///edonuops.db

# Test Database
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/edonuops_test

# Security Keys (Change these in production!)
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# Redis Configuration (Optional for caching)
REDIS_URL=redis://localhost:6379/0

# External Services (Optional)
OPENAI_API_KEY=your-openai-api-key
STRIPE_PUBLIC_KEY=your-stripe-public-key
STRIPE_SECRET_KEY=your-stripe-secret-key

# Email Configuration (Optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Logging
LOG_LEVEL=INFO


